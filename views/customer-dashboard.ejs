                <p class="animate-text">Boom!</p>
                <div class="dots">
                  <span></span>
                  <span></span>
                  <span></span>
                </div>
              </div>
            </div>
          </a>
          <a href="/customer/court?sport=cricket">
            <div class="tile">
              <img
                src="https://cdn.dribbble.com/users/1445706/screenshots/5050073/39-uber_cricket.png"
                alt=""
              />
              <div class="text">
                <h1>Cricket</h1>
                <h2 class="animate-text"></h2>
                <p class="animate-text">Boom!</p>
                <div class="dots">
