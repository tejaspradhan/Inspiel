                alt=""
              />
              <div class="text">
                <h1>Squash</h1>
                <h2 class="animate-text"></h2>
                <p class="animate-text">Boom!</p>
                <div class="dots">
                  <span></span>
                  <span></span>
                  <span></span>
                </div>
              </div>
            </div>
